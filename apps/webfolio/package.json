{
  "name": "@apps/webfolio",
  "version": "1.0.0",
  "description": "Web portfolio for MenSeb.",
  "keywords": [
    "webfolio",
    "web",
    "portfolio",
    "menseb"
  ],
  "author": "MenSeb <sebastien.menard.github@gmail.com>",
  "homepage": "https://github.com/MenSeb/react-packages-boilerplate#readme",
  "license": "ISC",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "type": "module",
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "files": [
    "lib"
  ],
  "private": true,
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MenSeb/react-packages-boilerplate.git"
  },
  "scripts": {
    "build": "yarn build:ts && tsc-alias",
    "build:ts": "tsc -p tsconfig.build.json",
    "build:watch": "yarn build:ts && (concurrently \"yarn:build:ts -w\" \"tsc-alias -w\")",
    "deploy": "yarn build && yarn webpack:build",
    "start": "nodemon",
    "test-temp": "jest",
    "test:watch-temp": "yarn test --watch",
    "test:coverage-temp": "yarn test --coverage",
    "webpack:build": "webpack --mode production",
    "webpack:serve": "webpack serve --hot --open --mode development"
  },
  "bugs": {
    "url": "https://github.com/MenSeb/react-packages-boilerplate/issues"
  },
  "dependencies": {
    "@packages/react-form": "*",
    "@packages/react-ui": "*",
    "@packages/react-widgets": "*",
    "@packages/styles": "*"
  }
}
