{
  "name": "@react/styles",
  "version": "1.0.0",
  "description": "Styles for React development.",
  "keywords": [
    "styles",
    "react",
    "css",
    "sass"
  ],
  "author": "MenSeb <sebastien.menard.github@gmail.com>",
  "homepage": "https://github.com/MenSeb/react-packages-boilerplate#readme",
  "license": "ISC",
  "main": "lib/index.css",
  "directories": {
    "lib": "lib"
  },
  "files": [
    "lib"
  ],
  "private": true,
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MenSeb/react-packages-boilerplate.git"
  },
  "scripts": {
    "prebuild": "yarn build:clean",
    "build": "yarn sass:prod",
    "build:clean": "rimraf lib",
    "clean": "yarn build:clean",
    "sass": "sass src/index.scss:lib/index.css",
    "sass:dev": "yarn sass --style=expanded --embed-source-map",
    "sass:prod": "yarn sass --style=compressed --no-source-map",
    "sass:watch": "yarn sass:dev --watch --color --update"
  },
  "bugs": {
    "url": "https://github.com/MenSeb/react-packages-boilerplate/issues"
  }
}
