{
  "name": "@scripts/packages",
  "version": "1.0.0",
  "description": "Scripts to manage workspaces packages.",
  "keywords": [
    "scripts",
    "package",
    "packages",
    "workspace",
    "workspaces"
  ],
  "author": "MenSeb <sebastien.menard.github@gmail.com>",
  "homepage": "https://github.com/MenSeb/react-packages-boilerplate#readme",
  "license": "ISC",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "files": [
    "lib"
  ],
  "private": true,
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MenSeb/react-packages-boilerplate.git"
  },
  "scripts": {
    "build": "yarn build:ts && tsc-alias",
    "build:ts": "tsc -p tsconfig.build.json",
    "build:watch": "yarn build:ts && (concurrently \"yarn:build:ts -w\" \"tsc-alias -w\")",
    "test": "jest",
    "test:watch": "yarn test --watch",
    "test:coverage": "yarn test --coverage"
  },
  "bugs": {
    "url": "https://github.com/MenSeb/react-packages-boilerplate/issues"
  }
}
