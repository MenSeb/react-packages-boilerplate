{
  "extends": [
    "stylelint-config-standard-scss",
    "stylelint-config-sass-guidelines"
  ],
  "rules": {
    "max-nesting-depth": [
      3,
      {
        "ignore": ["blockless-at-rules", "pseudo-classes"],
        "ignoreAtRules": ["media"]
      }
    ],
    "no-descending-specificity": null,
    "selector-max-id": 1,
    "selector-no-qualifying-type": null
  }
}
