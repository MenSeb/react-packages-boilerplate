{
  "name": "@menseb/react-packages-boilerplate",
  "version": "0.0.0",
  "description": "React packages boilerplate.",
  "main": "index.js",
  "repository": "https://github.com/MenSeb/react-packages-boilerplate.git",
  "author": "SÃ©bastien Menard",
  "license": "ISC",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "plugins/*",
    "scripts/*"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional",
      "@commitlint/config-lerna-scopes"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "create": "ts-node scripts/create-package",
    "commit": "cz",
    "deploy": "lerna run deploy",
    "docs": "typedoc --plugin @plugins/typedoc",
    "build": "lerna run build",
    "build:watch": "lerna run build:watch",
    "lint": "yarn lint:es && yarn lint:markdown && yarn lint:style",
    "lint:es": "eslint .",
    "lint:markdown": "markdownlint **/*.md",
    "lint:style": "stylelint **/*.scss",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write .",
    "prepublish": "yarn run build",
    "publish": "lerna publish",
    "serve": "lerna run serve",
    "show": "lerna --scope=@apps/webfolio run webpack:serve",
    "test": "jest",
    "test:watch": "yarn test --watch",
    "test:coverage": "yarn test --coverage"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@commitlint/config-lerna-scopes": "^19.0.0",
    "@commitlint/prompt-cli": "^19.0.0",
    "@svgr/webpack": "^8.0.1",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.3.0",
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.13",
    "@types/jest": "^29.0.0",
    "@types/multer": "^2.0.0",
    "@types/node": "^22.0.0",
    "@types/nodemailer": "^6.4.9",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "classnames": "^2.3.2",
    "commitizen": "^4.2.5",
    "concurrently": "^8.2.1",
    "copy-webpack-plugin": "^11.0.0",
    "cors": "^2.8.5",
    "coveralls": "^3.1.1",
    "css-loader": "^6.8.1",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^17.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-jest": "^28.0.0",
    "eslint-plugin-jest-dom": "^5.0.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-testing-library": "^6.0.0",
    "express": "^4.18.2",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "lerna": "^7.1.4",
    "markdownlint": "^0.31.0",
    "markdownlint-cli": "^0.37.0",
    "multer": "^2.0.0",
    "nodemailer": "^7.0.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.0.0",
    "react-router-dom": "^6.14.2",
    "rimraf": "^5.0.0",
    "sass": "^1.63.6",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.3",
    "stylelint": "^15.6.2",
    "stylelint-config-sass-guidelines": "^10.0.0",
    "stylelint-config-standard-scss": "^10.0.0",
    "ts-jest": "^29.0.0",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.7",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "typedoc": "^0.25.0",
    "typescript": "^5.0.0",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "webpack-merge": "^5.9.0",
    "whatwg-fetch": "^3.6.17"
  }
}
